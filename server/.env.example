# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/localconnect

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe Configuration
STRIPE_SECERT_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Subscription Price IDs
REGUALR_USER=price_regular_subscription_id
PREMIUM_USER=price_premium_subscription_id

# Credit Package Price IDs
CREDIT_PACKAGE_SMALL=price_small_credit_package_id
CREDIT_PACKAGE_MEDIUM=price_medium_credit_package_id
CREDIT_PACKAGE_LARGE=price_large_credit_package_id

# Payment Synchronization Configuration
PAYMENT_SYNC_SCHEDULE=0 */4 * * *  # Every 4 hours (cron format)
PAYMENT_SYNC_THRESHOLD=12          # Hours before a processing payment is considered stale
